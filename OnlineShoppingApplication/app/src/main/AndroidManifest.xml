<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.COMP4342MobileComputingGroupProject"
        tools:targetApi="31">


        <!-- Login -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject">
        </activity>

        <!-- Shopping Part -->
        <activity
            android:name=".activities.ShoppingActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject">

        </activity>
        <activity
            android:name=".activities.PaymentActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject">
        </activity>
        <activity
            android:name=".activities.AddressActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject">
        </activity>


        <!-- Admin Part -->
        <activity
            android:name=".activities.Admin.AdminMainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject">
        </activity>
        <activity
            android:name=".activities.Admin.AdminNewProduct"
            android:exported="false"
            android:label="@string/title_activity_admin_new_product"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject" />
        <activity
            android:name=".activities.Admin.AdminUpdateProduct"
            android:exported="false"
            android:label="@string/title_activity_admin_new_product"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject" />
        <activity
            android:name=".activities.Admin.AdminCategoryManActivity"
            android:exported="false"
            android:label="Admin Category Management Activity"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject" />
        <activity
            android:name=".activities.Admin.AdminProductManActivity"
            android:exported="false"
            android:label="Admin Product Management Activity"
            android:theme="@style/Theme.COMP4342MobileComputingGroupProject" />


    </application>

</manifest>